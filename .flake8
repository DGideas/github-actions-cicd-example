[flake8]
exclude = .git, __init__.py
ignore = E203, E501, W503, C901
; E203: Whitespace before ':'
;       - Conflict with black
; W503: Line break occurred before a binary operator
;       - Conflict with black
; E501: Line too long
; C901: function too complex
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
